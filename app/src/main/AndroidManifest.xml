        <activity android:name=".WaypointListActivity" android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".GuardListActivity" android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".GuardActivity" />
        <activity android:name=".RouteCreationActivity" />
        <activity android:name=".WaypointActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminActivity" />
    </application>

</manifest>